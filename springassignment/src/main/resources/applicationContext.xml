<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
<!--    creating beans and injecting message service bean in -->
    <bean id="MessagePrinter" class="com.knoldus.MessagePrinter" autowire="byType">
    </bean>
    <bean id="messageService" class="com.knoldus.MessageService">
        <!-- doing setter injection -->
        <property name="message" value="Hello Riya!"></property>
    </bean>
</beans>